extends layout

block main
  div.account.flex-column-center
    h2 Account Information 
    br
    dl.side-by-side 
      dt Username: 
      dd.flex-justified
        span #{user.username}
        a.unanchor.rebutton.h-1(href="/user/account/update-username") edit
    dl.side-by-side 
      dt Email:
      dd.flex-justified
        span #{user.email}
        a.unanchor.rebutton.h-1(href="/user/account/update-email") edit
    br
    div
      a.unanchor.rebutton(href="/user/account/reset-password") Change Password 
    br
    h2 User Profile 
    br
    dl.side-by-side 
      dt First Name:
      dd #{user.first_name}
    dl.side-by-side 
      dt Last Name:
      dd #{user.last_name}
    br
    div
      a.unanchor.rebutton(href="/user/account/update-account-information") Update Profile Data