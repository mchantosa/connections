extends ../layout

block header
 
block main
  div.dilute-background
    header.contact-list
      h2 #{`Contact edit page for ${contact.getName()}`}
      nav.secondary-nav
        form.delete(action=`/user/contacts/${contact.id}/delete` method="post")
          input.unbutton.rebutton(type="submit" value="DELETE CONTACT")
    div.contact-list
      form.contact(action=`/user/contacts/${contact.id}/edit` method="post")
        div.horizontal
          div.block-left
            div
              h3 Name
              dl.side-by-side
                dt 
                  label(for="first-name") First Name: 
                dd
                  input(type="text" name="firstName" id="first-name" value=contact.getInputFirstName())
              dl.side-by-side
                dt 
                  label(for="last-name") Last Name: 
                dd
                  input(type="text" name="lastName" id="last-name" value=contact.getInputLastName())
            div
              h3 Contact Information
              dl.side-by-side
                dt 
                  label(for="preferred_medium") Preferred Medium:
                dd 
                  input(type="text" name="preferredMedium" id="preferred_medium" value=contact.getInputPreferredMedium())
              dl.side-by-side
                dt 
                  label(for="phone_number") Phone Number:
                dd 
                  input(type="tel" name="phone" id="phone_number" pattern=contact.getPhonePattern() value=contact.getInputPhoneNumber())
                dt 
                dd
                  small Format: 123-456-7890
              dl.side-by-side
                dt 
                  label(for="email") Email:
                dd 
                  input(type="email" name="email" id="email" placeholder='username@domain.com' value=contact.getInputEmail())
            div
              h3 Address
              dl.side-by-side
                dt
                  label(for="street_address_1") Street address 1:
                dd
                  input(type="text" name="streetAddress1" id="street_address_1" value=contact.getInputStreetAddress1())
              dl.side-by-side
                dt
                  label(for="street_address_2") Street address 2:
                dd
                  input(type="text" name="streetAddress2" id="street_address_2" value=contact.getInputStreetAddress2())
              dl.side-by-side
                dt
                  label(for="city") City:
                dd
                  input(type="text" name="city" id="city" value=contact.getInputCity())
              dl.side-by-side
                dt 
                  label(for="state") State:
                dd
