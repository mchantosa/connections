              dl.side-by-side
                dt
                  label(for="zip_code") Zipcode:
                dd
                  input(type="text" name="zipCode" id="zip_code" value=contact.getInputZipcode())
              dl.side-by-side
                dt 
                  label(for="country") Country: 
                dd
                  input(type="text" name="country" id="country" value=contact.getInputCountry())
          div.block-right
            h3.center.mb-2 Objectives
            div.objectives-header
              h4 Occasion
              h4 Date 
              h4 Periodicity
              h4 Reminder
            if contact.objectives.length > 0
              each objective in contact.objectives
                div.alternate.objectives-elm
                  div
                    p #{`${objective.occasion}`}
                    p #{`${objective.getOccasionDate()}`}
                    p #{`${objective.periodicity}`}
                    p #{`${objective.reminder}`}   
            else 
              p.mb-2
              h1.center This contact currently has no objectives
            h3.center Notes
            textarea(wrap="soft" name="notes" placeholder = contact.getPlaceholderNotes()) #{contact.getInputNotes()}  
        footer
          input.unbutton.rebutton(type="submit" value="Save Changes")