extends ../account 

block overlay-bottom
  div.overlay
block overlay-top
  form.front-and-center.login-register.p-3(action="/user/account/reset-password" method="post")
    fieldset.column-center
      legend.mb-2 Reset Password
      dl.mb-1
        dt
          label(for="password") Current Password:  
        dd
          input(type="password" name="password" id="password")
      dl.mb-1
        dt
          label(for="new-password") New Password:  
        dd
          input(type="password" name="newPassword" id="new-password")
      dl.mb-1
        dt
          label(for="confirm-password") Confirm Password:  
        dd
          input(type="password" name="confirmPassword" id="confirm-password")
      input.unbutton.rebutton(type="submit" value="Reset Password")
      a.unanchor.rebutton.center(href="/user/account") Cancel