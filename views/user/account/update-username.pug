extends ../layout

block main
    form(action="/user/account/update-username" method="post" data-test-id="update")
      div.account.flex-column-center
        h2 Update Username
        p.space-v2
        dl.side-by-side
          dt
            label(for="username") Username:  
          dd
            - let username = (user.newUsername) ? user.newUsername : user.username
            input(type="text" name="username" id="username" value=username)
      p.space-v1
      nav.flex-right
        input.unbutton.rebutton(type="submit" value="Update username")
        a.unanchor.rebutton(href="/user/account" data-test-id="cancel") Cancel